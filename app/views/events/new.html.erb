<html>
  <body>
    <!-- ... -->

    <% if @event.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <p>Nous n'avons pas réussi à créer ton évènement pour la (ou les) raison(s) suivante(s) :</p>
        <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>  
    <% end %>


<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
        <%= form_tag url_for(action: 'create'), method: "post", multipart: true do %>
      
      <%=label_tag 'Start date'%>
      <input type="date" id="start" name="start_date" value=<%= Time.now%> min=<%= Time.now%> max="2031-12-31">
      <br /> <br />

      <%= label_tag 'Duration (in minutes)' %>
      <%= number_field_tag 'duration'%>
      <br /> <br />
    
      <%= label_tag 'Title' %>
      <%= text_field_tag 'title'%>
      <br /> <br />

      <%= label_tag 'Description' %>
      <%= text_area_tag 'description' %>
      <br /> <br />

      <%= label_tag 'Price (in euros)' %>
      <%= number_field_tag 'price'%>
      <br /> <br />

      <%= label_tag 'Location' %>
      <%= text_field_tag 'location'%>
      <br /> <br />

      <%= label_tag 'Image de couverture' %><br />
      <%= file_field_tag "picture" %>
      <br /> <br />

      <%= submit_tag "Créer l'évènement" %>

    <% end %>

    </div>
  </div>
</div>

  </body>
</html>